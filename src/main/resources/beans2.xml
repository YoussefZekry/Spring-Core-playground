<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="before" class="com.mypackage.CalcBefore"/>
	<bean id="afterReturn" class="com.mypackage.CalcAfterReturn" />
	<bean id="around" class="com.mypackage.CalcAround" />

	<bean id="mo3yan" class="org.springframework.aop.support.NameMatchMethodPointcut">
		<property name="mappedNames">
			<list>
				<value>add</value>
				<value>multi</value>
			</list>
		</property>
		</bean>
	<bean id="methodNameAdvisorBefore" parent="mo3yan"
		class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor" >
		<property name="advice" ref="before"></property>	
	</bean>
	
	<bean id="methodNameAdvisorAfter" parent="mo3yan"
		class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor" >
		<property name="advice" ref="afterReturn"></property>	
	</bean>
	
	
	
	<bean id="CalcProxy" 
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="CalcService"/>
		<property name="interceptorNames">
			<list>				
				<value>methodNameAdvisorBefore</value>
				<value>methodNameAdvisorAfter</value>
			</list>
		</property>
	</bean>

	<bean id="CalcService" class="com.mypackage.CalcService"/>

</beans>